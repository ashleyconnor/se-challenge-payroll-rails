<div class="row" style="padding-top: 2rem;">
  <div class="col-6">
    <h1>Report</h1>
  </div>
  <div class="col-6">
    <%= link_to "Upload New Timesheet", report_new_path, class: "btn btn-primary" %>
  </div>
  <div class="col-12"  style="padding-top: 2rem;">
    <table class="table">
      <thead>
        <th>Employee ID</th>
        <th>Pay Period Start</th>
        <th>Pay Period End</th>
        <th>Wages</th>
      </thead>
      <tbody>
        <% @payroll_entries.each do |entry| %>
          <tr>
            <td><%= entry.employee_id %></td>
            <td><%= entry.pay_period_start %></td>
            <td><%= entry.pay_period_end %></td>
            <td><%= entry.wages %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>